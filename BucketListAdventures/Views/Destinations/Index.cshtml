@using BucketListAdventures.Models
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<Destination>


<br />
<br />
<img src="~/images/bucket_compass.jpg" alt="Bucket List Compass Image" height="250" width="280">
<br />
<br />



<h1>Destinations on Your Bucket List</h1>

<p>
    <a asp-controller="Destinations" asp-action="Add">Add Destination</a>
</p>

<p>
    <a asp-controller="Destinations" asp-action="Delete">Delete Destination</a>
</p>

@if (Model.Count == 0)
{
    <p>No destinations yet!</p>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                Name of Destination
            </th>
            <th scope="col">
                Location
            </th>
            <th scope="col">
                Description
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var dest in Model)
        {
            <tr>
                <th scope="row">@dest.Name</th>
                <th scope="row">@dest.Location</th>
                <th scope="row">@dest.Description</th> 
                <th scope="row"><a asp-controller="Destinations" asp-action="Edit" asp-route-id="@dest.Id">Edit Destination</a></th>
            </tr>
        }

    </tbody>
</table>

