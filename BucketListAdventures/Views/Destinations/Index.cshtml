@using BucketListAdventures.Models
@addTagHelper*, Microsoft.AspNetCore.Mvc.TagHelpers

@model List<Destination>

<div class="container">
    <div class="row">
        <div class="col-4">
           <img src="~/images/transparent_my_bucketlist.jpg" alt="My Bucket List" class="img-fluid"></div>
        <div class="col-6">
            <p class="btn-group">
                <a asp-controller="Destinations" asp-action="Add" class="btn btn-primary">Add Destination</a>
                <a asp-controller="Destinations" asp-action="Delete" class="btn btn-danger">Delete Destination</a>
            </p>
        </div>
    </div>
</div>

@if (Model.Count == 0)
{
    <p>No destinations yet!</p>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">
                Name of Destination
            </th>
            <th scope="col">
                Location
            </th>
            <th scope="col">
                Description
            </th>
        </tr>
    </thead>
    <tbody>

        @foreach (var dest in Model)
        {
            <tr>
                <th scope="row">@dest.Name</th>
                <th scope="row">@dest.Location</th>
                <th scope="row">@dest.Description</th>
                <th scope="row"><a asp-controller="Destinations" asp-action="Edit" asp-route-id="@dest.Id" class="btn btn-warning">Edit</a></th>
            </tr>
        }

    </tbody>
</table>

